<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <solid android:color="@color/grå20"/>
      <stroke android:width="1dp" android:color="@color/grå40"/>
    </shape>
  </item>


  <item android:state_selected="true">
    <shape android:shape="rectangle">
      <solid android:color="@color/grå10"/>
      <stroke android:width="3dp" android:color="@color/grå20"/>
    </shape>
  </item>

  <!-- Den mest generelle skal være nederst -->
  <item>
    <shape android:shape="rectangle">
      <solid android:color="@color/hvid"/>
      <stroke android:width="1dp" android:color="@color/grå20"/>
    </shape>
  </item>

</selector>