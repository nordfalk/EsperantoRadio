<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

  <android.support.v7.widget.Toolbar
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/toolbar"
      android:layout_height="?attr/actionBarSize"
      android:layout_width="match_parent"
      android:background="@color/grå70"
      >
  </android.support.v7.widget.Toolbar>

  <ListView android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:layout_weight="1"/>

  <!-- android:background="?android:attr/dividerHorizontal" -->
  <View
      android:layout_width="fill_parent"
      android:layout_height="1dip"
      android:layout_marginLeft="16dip"
      android:layout_marginRight="16dip"
      />

  <!-- style="?android:attr/buttonBarStyle" -->
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

    <!--
                style="?android:attr/buttonBarButtonStyle"
    -->
    <Button android:id="@+id/alarm_revert"
            android:focusable="true"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:textSize="@dimen/metainfo_skrifstørrelse"
            android:background="@drawable/knap_blaa_bg"
            android:text="@string/revert"/>

    <!--
                style="?android:attr/buttonBarButtonStyle"
    -->
    <Button android:id="@+id/alarm_delete"
            android:focusable="true"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:textSize="@dimen/metainfo_skrifstørrelse"
            android:background="@drawable/knap_blaa_bg"
            android:text="@string/delete"/>
    <!--
                style="?android:attr/buttonBarButtonStyle"
    -->
    <Button android:id="@+id/alarm_save"
            android:focusable="true"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:textSize="@dimen/metainfo_skrifstørrelse"
            android:background="@drawable/knap_blaa_bg"
            android:text="@android:string/ok"/>

  </LinearLayout>

</LinearLayout>
