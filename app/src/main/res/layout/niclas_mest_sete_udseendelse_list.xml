<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        card_view:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_margin"
            android:layout_marginBottom="@dimen/card_margin"
            android:layout_marginLeft="@dimen/card_margin"
            android:layout_marginRight="@dimen/card_margin"
            android:paddingTop="@dimen/zero_margin"
            android:paddingBottom="@dimen/zero_margin">

            <ImageView
                android:id="@+id/mestsete_udsendelse_imageview"
                android:layout_width="@dimen/list_mestsete_image_size_width"
                android:layout_height="@dimen/list_mestsete_image_size_height"
                android:layout_marginBottom="@dimen/list_mestsete_image_margin_bottom"
                android:background="#000"
                card_view:srcCompat="@drawable/eksempel_udsendelse"/>

            <TextView
                android:id="@+id/mestsete_udsendelse_description"
                android:layout_width="@dimen/list_mestsete_image_size_width"
                android:layout_height="wrap_content"
                android:layout_below="@id/mestsete_udsendelse_imageview"
                android:lines="2"
                android:text="Rigtige mÃ¦nd - Det nye hold (4:6) bla bla bla bla bla bla bla bla bla bla bla "
                android:textSize="@dimen/list_mestsete_description_size"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>