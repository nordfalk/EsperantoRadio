<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:orientation="vertical">

  <View
      android:id="@+id/stiplet_linje"
      android:background="@drawable/stiplet_linje"
      android:layerType="software"
      android:layout_width="match_parent"
      android:layout_marginBottom="13dp"
      android:layout_height="3dp"/>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="wrap_content">


    <TextView
      android:id="@+id/titel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Pressen på P3"
      tools:ignore="HardcodedText"
      android:textStyle="bold"
      android:textSize="@dimen/titel_skrifstørrelse"
      android:textColor="@color/sort"/>

    <TextView
        android:id="@+id/dato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17. jan. 2014"
        tools:ignore="HardcodedText"
        android:textSize="@dimen/dato_skrifstørrelse"
        android:textColor="@color/sort"/>

  <TextView
      android:id="@+id/varighed"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="P3, 55 MIN"
      tools:ignore="HardcodedText"
      android:textSize="@dimen/metainfo_skrifstørrelse"
      android:textColor="@color/grå50"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hør"
        android:src="@drawable/dri_lyd_blaa"
        tools:ignore="ContentDescription"/>
  </LinearLayout>

</LinearLayout>
