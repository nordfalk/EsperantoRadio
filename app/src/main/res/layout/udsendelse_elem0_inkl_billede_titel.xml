<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


  <ImageView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:adjustViewBounds="true"
      android:maxHeight="220dp"
      android:id="@+id/billede"
      android:src="@drawable/eksempel_udsendelse"
      tools:ignore="ContentDescription"/>
<!--
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:adjustViewBounds="true"
      android:src="@drawable/udsendelse_baggrundsmaske"
      tools:ignore="ContentDescription"/>
-->
  <View
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="-44dp"
      android:id="@+id/udsendelse_baggrundsgradient"
      android:background="@drawable/udsendelse_baggrundsgradient"
      />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="12dp"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/kanallogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/skrald__kanallogo_p3"/>

    <TextView
        android:id="@+id/p4navn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nordjylland"
        android:textStyle="bold"
        android:layout_marginLeft="4dp"
        android:shadowColor="@color/hvid"
        android:shadowRadius="4" tools:ignore="HardcodedText"/>
    </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:padding="12dp"
      android:orientation="vertical">


  <TextView
        android:id="@+id/titel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hvid"
        android:shadowColor="@color/sort"
        android:shadowRadius="2"
        android:text="Pressen på P3"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/starttid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hvid"
        android:shadowColor="@color/sort"
        android:shadowRadius="2"
        android:text="11. sep. 2014"
        android:textSize="20sp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        tools:ignore="HardcodedText"/>

  </LinearLayout>

  <TextView
      android:id="@+id/hør_tekst"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="16dp"
      android:layout_marginBottom="16dp"
      android:layout_gravity="bottom|right"
      android:textColor="@color/hvid"
      android:background="@color/sort"
      android:text="@string/Kan_endnu_ikke_afspilles"
      android:textSize="12sp"
      />
  <ImageButton
      android:id="@+id/hør"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="16dp"
      android:layout_marginBottom="16dp"
      android:layout_gravity="bottom|right"
      android:contentDescription="@string/hør_udsendelse"
      android:src="@drawable/dri_lyd_hvid"
      android:background="@drawable/knap_blaa_bg"
      />
  <!--
    <Button
        android:id="@+id/hør"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/hørknap_højde"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="16dp"
        android:drawableLeft="@drawable/dri_lyd_hvid"
        android:text="HØR UDSENDELSE"
        android:textColor="@color/hvid"
        android:background="@drawable/knap_blaa_bg"
        />
  -->


</FrameLayout>