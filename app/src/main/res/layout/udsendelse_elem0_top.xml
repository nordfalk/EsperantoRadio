    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/kanallogo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/skrald__kanallogo_p3"/>

      <TextView
          android:id="@+id/p4navn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Nordjylland"
          android:textStyle="bold"
          android:layout_marginLeft="4dp"
          android:shadowColor="@color/hvid"
          android:shadowRadius="4"
          tools:ignore="HardcodedText"/>
      </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="12dp"
        android:orientation="vertical">


      <TextView
          android:id="@+id/titel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/hvid"
          android:shadowColor="@color/sort"
          android:shadowRadius="2"
          android:text="Pressen på P3"
          android:textSize="20sp"
          android:gravity="center_vertical"
          android:textStyle="bold"
          android:paddingLeft="4dp"
          android:paddingRight="4dp"
          android:maxLines="2"
          tools:ignore="HardcodedText"/>

      <TextView
          android:id="@+id/starttid"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/hvid"
          android:shadowColor="@color/sort"
          android:shadowRadius="2"
          android:text="11. sep. 2014"
          android:textSize="20sp"
          android:paddingLeft="4dp"
          android:paddingRight="4dp"
          tools:ignore="HardcodedText"/>

    </LinearLayout>

  <CheckBox
      android:id="@+id/favorit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:drawableRight="@drawable/dri_favorit"
      android:background="@drawable/knap_graa10_bg"
      android:layout_gravity="top|right"
      android:layout_marginRight="16dp"
      android:layout_marginTop="12dp"
      android:contentDescription="@string/favorit"
      android:textColor="@color/blå"
      android:textSize="12sp"
      android:button="@null"/>


  <TextView
      android:id="@+id/hent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|right"
      android:layout_marginBottom="64dp"
      android:layout_marginRight="16dp"
      android:background="@drawable/knap_blaa_bg"
      android:contentDescription="@string/hent_udsendelse"
      android:drawableRight="@drawable/dri_hent_hvid"
      android:gravity="center_vertical"
      android:text="@string/DOWNLOAD"
      android:textSize="12sp"/>

  <TextView
        android:id="@+id/hør_tekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="bottom|right"
        android:textColor="@color/hvid"
        android:background="@color/sort"
        android:text="@string/Kan_endnu_ikke_afspilles"
        android:textSize="12sp"
        />

    <ImageButton
        android:id="@+id/hør"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="bottom|right"
        android:contentDescription="@string/hør_udsendelse"
        android:src="@drawable/dri_lyd_hvid"
        android:background="@drawable/knap_blaa_bg"
        />

</FrameLayout>
